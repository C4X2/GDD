<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
	<application>
      	<el-resolver>
        	org.springframework.web.jsf.el.SpringBeanFacesELResolver
    	</el-resolver>
   	</application>

   <!-- MANAGED BEANS -->   	
	<managed-bean>
      <managed-bean-name>msg</managed-bean-name>
      <managed-bean-class>com.emerald.gdd.beans.impl.MessageRegistryBeanImpl</managed-bean-class>
      <managed-bean-scope>application</managed-bean-scope>
      <!-- Declare properties of the managed bean to be injected -->
   	</managed-bean>
   	<managed-bean>
    	<managed-bean-name>contact</managed-bean-name>
      	<managed-bean-class>com.emerald.gdd.beans.impl.CompanyContactBeanImpl</managed-bean-class>
      	<managed-bean-scope>request</managed-bean-scope>
      	<!-- Declare properties of the managed bean to be injected -->

   	</managed-bean>
   	<managed-bean>
      	<managed-bean-name>footer</managed-bean-name>
      	<managed-bean-class>com.emerald.gdd.beans.impl.GDDFooterActionBeanImpl</managed-bean-class>
      	<managed-bean-scope>session</managed-bean-scope>
      	<!-- Declare properties of the managed bean to be injected -->
   	</managed-bean>
   	<managed-bean>
      	<managed-bean-name>header</managed-bean-name>
      	<managed-bean-class>com.emerald.gdd.beans.impl.GDDHeaderActionBeanImpl</managed-bean-class>
      	<managed-bean-scope>session</managed-bean-scope>
      	<!-- Declare properties of the managed bean to be injected -->
   	</managed-bean>
   	<managed-bean>
      	<managed-bean-name>build</managed-bean-name>
      	<managed-bean-class>com.emerald.gdd.beans.impl.GDDBuildBeanImpl</managed-bean-class>
      	<managed-bean-scope>session</managed-bean-scope>
      	<!-- Declare properties of the managed bean to be injected -->
   	</managed-bean>
   	<managed-bean>
   		<managed-bean-name>simplifiedGDDFormat</managed-bean-name>
   		<managed-bean-class>com.emerald.gdd.common.params.impl.SimplifiedGDDFormat</managed-bean-class>
   		<managed-bean-scope>session</managed-bean-scope>
   	</managed-bean>
    <!-- END MANAGED BEANS -->
   
    <!-- NAVIGATION RULES --> 

   <!-- END NAVIGATION RULES -->
   
   <!-- CONVERTERS -->
   <converter>
   	<converter-id>targetedPlatformConverter</converter-id>
   	<converter-class>com.emerald.gdd.common.converters.TargetedPlatformConverter</converter-class>
   </converter>
   <!-- END CONVERTERS -->

</faces-config>